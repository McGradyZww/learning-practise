<?xml version="1.0" encoding="UTF-8" standalone="no" ?>

<dlg name="dlg_monitor_down_product_monitor_set" title="" width="460" height="520"  appwin="1" resize="0" frame="" bkimg="" crbk="3c5680">
	<base>
		<img pos="0,0,-0,30" image="skins\default\dlg_header.png" mode="titl" show="1" response="0" />
		<text name="title" crtext="FFFFFF" crmark="800000" crshadow="808080" font="default3"
			pos="50,5,200,25" title="账户风险设置" response="0" show="1" />
		<button name="button.close" pos="-34,0,-0,30" skin="IDB_BT_CLOSE" show="1" tip="关闭" shortcut="ESC" />
	</base>
	<body>
		<!--布局规则:
		大标题:default5 长度和高度25  大标题之间相隔10
		子项:default3 长度和高度20 和大标题高度相隔5，子项间相隔40
		combox：长度120，高度26
		-->
		<div name="product_monitor_set_pagamset.body" pos="0,30,-0,-0">	
			<img pos="0,0,-0,0" image="skins\default\dlg_bg.png" show="1" response="0" />
