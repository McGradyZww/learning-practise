         <text crtext="000000" name="product_monitor_set.dw.closing_value" crmark="800000" align="left" pos="245,4" width="20" height="25" title="%" font="default3" show="1"/>
       
	    
			   <text crtext="000000" crmark="800000" align="left" pos="5,45" width="220" height="36" title="达到一级平仓线平仓比例:" font="default1" show="1"/>  
