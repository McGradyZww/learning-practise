	    <div name="product_monitor_set.closeset" pos="25,276,-0,-45" show="0">	
	    	 <text crtext="000000" crmark="800000" align="left" pos="5,4" width="220" height="36" title="达到预警线平仓比例:" font="default1" show="1"/>  
			   <edit name="product_monitor_set.warning_ratio" tabstop="1" skin="IDB_EDIT" pos="145,0" width="100" height="25"
