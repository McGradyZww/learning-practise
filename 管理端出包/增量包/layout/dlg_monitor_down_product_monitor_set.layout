		<combobox name="product_monitor_set.product_code" tabstop="1" skin="IDB_EDIT" pos="80,15" width="120" height="36" tip="产品"
					  small-image="skin:IDB_DROP_DOWN_small"
					  multiline="0" readonly="1" maxchar="50"
						font="default3" crtext="0,0,0" crtip="128,128,128">
		</combobox>
		<!--单元-->
		<text crtext="000000" crmark="800000" align="left" pos="250,20,310,40" title="交易单元" font="default1" show="1"/>
