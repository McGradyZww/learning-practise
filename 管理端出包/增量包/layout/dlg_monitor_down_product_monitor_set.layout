					  multiline="0" readonly="1" maxchar="50"
						font="default3" crtext="0,0,0" crtip="128,128,128">
		</combobox>
		
		<text crtext="000000" crmark="800000" align="left" pos="20,65,80,85" title="监控方式" font="default1" show="1"/>
