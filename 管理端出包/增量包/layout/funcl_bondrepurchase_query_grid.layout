<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
  <div name="funcl_bondrepurchase_query_grid">
    <img pos="0,0,-0,-0" image="skins\default\MsgBack.png" mode="extrude" framesize="0" show="1" response="0"/>
    <img pos="1,0,-1,3" image="skins\default\line_blue.png" mode="tile" show="1" response="0"/>
		<!--市场编号-->
		<text crtext="000000" crmark="800000" align="right" pos="10,20,90,40" title="市场编号:" font="bold3" show="1"/>
		<combobox name="bondrepurchase_query.exchange_no" tabstop="1" skin="IDB_EDIT" pos="90,12" width="120" height="36" tip="市场编号"
				  small-image="skin:IDB_DROP_DOWN_small"
				  multiline="0" readonly="1" maxchar="50"
					font="default3" crtext="0,0,0" crtip="128,128,128">
		</combobox>
	
    <!--证券代码-->
	  <text crtext="000000" crmark="800000" align="right" pos="230,20,310,40" title="证券代码:" font="bold3" show="1"/>
	  <edit name="bondrepurchase_query.stock_code" tabstop="1" skin="IDB_EDIT" pos="310,12" width="100" height="36"
		   multiline="0" number="0" readonly="0" maxchar="50" font="default" crtext="0,0,0" stockcode="1" changednotify="1" maxchar="6"/>
		   
	 
    <!--单元-->
    <text crtext="000000" crmark="800000" align="right" pos="420,20" width="80" height="25" title="交易单元:" font="bold3" show="1"/>
    <combobox name="bondrepurchase_query.unit_code" tabstop="1" skin="IDB_EDIT" pos="505,12" width="120" height="36" tip="交易单元"
			  small-image="skin:IDB_DROP_DOWN_small" list-height="300" 
			  multiline="0" readonly="1" maxchar="50" autohscroll="1" autovscroll="1"
				font="default3" crtext="0,0,0" crtip="128,128,128">
    </combobox>
  
    <text crtext="000000" crmark="800000" align="right" pos="635,20" width="80" height="25" title="查询方式:" font="bold3" show="1"/>
    <combobox name="bondrepurchase_query.type" tabstop="1" skin="IDB_EDIT" pos="710,12" width="120" height="36" tip="明细查询"
			  small-image="skin:IDB_DROP_DOWN_small" list-height="60" 
			  multiline="0" readonly="1" maxchar="50" autohscroll="1" autovscroll="1"
				font="default3" crtext="0,0,0" crtip="128,128,128">
    </combobox>
	  
	 	   
    <button name="bondrepurchase_query_button.query" title="" pos="855,15" width="80" height="30" skin="IDB_BT_QUERY" tip="查询" show="1" shortcut="F5" enabledirkey="1"/>
  	<button name="query_button.export" title="" pos="-106,15" width="70" height="30" skin="IDB_BT_EXPORT" tip="导出" show="1" />
	<img pos="1,54,-1,56" image="skins\default\line_split.png" mode="tile" show="1" />
   <!--结果集grid-->
    <gridctrl name="grid.funcl_bondrepurchase_query" pos="2,60,-2,-30" show="1"
        img-scroll="skin:IDB_SCROLL_V" img-scrollh="skin:IDB_SCROLL_H" img-sep="skin:IDB_LINE_RP"
        img-check="skin:IDB_CHECK_BOX" img-colsep=""
        img-count="6" image="skin:IDB_LIST_IMG" img-colsep="skin:IDB_LINE_SPLIT" 
        left-pos="0" row-height="35" header-height="38" bk-transparent="10"
        font-title="big" font="default2" sort="1" editcolumn="1" 
        valign="middle" down-row="1" align="center" bCellColor="0"
        crtext="255,64,64,64"  crhover="0,0,0" crpush="212,234,254" crhead="23,69,144" crrowhover="236,240,254">        
        <column title="交易单元名称" width="100" align="center" key="unit_name" /> 
        <column title="产品名称" width="100" align="center" key="product_name"   />      
        <column title="证券代码" width="64" align="center" key="stock_code"  />
        <column title="证券名称" width="64" align="center" key="stock_name" />
        <column title="订单方向" width="64" align="center" key="order_dir" />
        <column title="回购数量" width="100" align="right" key="repo_qty" data_type="T" sum_column="1" />
        <column title="回购金额" width="100" align="right" key="repo_amt" data_type="T" sum_column="1" />
        <column title="回购利率" width="100" align="right" key="repo_rate" data_type="N"  />
        <column title="回购天数" width="100" align="right" key="repo_days" data_type="N" />
        <column title="回购实际天数" width="100" align="right" key="repo_calendar_days" data_type="N"  />
        <column title="回购购回利息" width="100" align="right" key="repo_back_interest" data_type="T" sum_column="1" />
        <column title="成交日期" width="100" align="center" key="repo_trade_date" data_type="N" />   
        <column title="实际回购到期日期" width="100" align="center" key="repo_back_trade_date" data_type="N" />             
        <column title="回购处理状态" width="100" align="right" key="repo_status" />     
        <column title=" 市  场 " width="100" align="center" key="exchange_no" />
				<column title="持仓序号" width="0" align="center" key="row_id"  deletable="0" /> 
    </gridctrl>
	
	<gridctrl name="grid.funcl_bondrepurchase_query_total" pos="2,-30,-2,-0" show="1"
         img-sep="skin:IDB_LINE_RP" 
         modify-column-width="1" column-sep="1" 
        img-colsep="skin:IDB_LINE_SPLIT"       
        left-pos="0" row-height="30" header-height="30" bk-transparent="10"
        font-title="big" font="default2" sort="1" editcolumn="1" 
        valign="middle" down-row="1" align="center"
        crtext="255,64,64,64" crhover="0,0,0" crpush="212,234,254" crhead="23,69,144" crrowhover="236,240,254">		
	  	<column title="" width="100" align="center" key="unit_name" /> 
        <column title="" width="100" align="center" key="product_name"   />      
        <column title="" width="64" align="center" key="stock_code"  />
        <column title="" width="64" align="center" key="stock_name" />
        <column title="" width="64" align="center" key="order_dir" />
        <column title="" width="100" align="right" key="repo_qty" />
        <column title="" width="100" align="right" key="repo_amt" />
        <column title="" width="100" align="right" key="repo_rate" />
        <column title="" width="100" align="right" key="repo_days" />
        <column title="" width="100" align="right" key="repo_calendar_days"  />
        <column title="" width="100" align="right" key="repo_back_interest"  />
        <column title="" width="100" align="center" key="repo_back_trade_date"  />             
        <column title="" width="100" align="right" key="repo_status" />     
        <column title="" width="100" align="center" key="exchange_no" />
    </gridctrl>
    
  </div>
